{% if datas.length != 0 %}
<table class="table table-bordered table-striped table-responsive-sm">
<tr><th>Itinéraire</th><th>Conducteur</th><th>Date réservation</th><th>Nb de places réservées</th>
</tr>	
{% for data in datas %}
    <tr>
        <td>{{ data.lieudepart }} => {{data.lieuarrivee}} le {{data.datedepart}} à {{data.heuredepart}}</td>
        <td>{{data.prenom}} {{data.nom}}</td>
        <td>{{data.datereservation}}</td>
        <td>{{data.nbplacesreservees}}</td>
    </tr>
{% endfor %}
</table>
{% else %}
	<p>Aucune réservation n'a été faite actuellement.</p>
{% endif %}
