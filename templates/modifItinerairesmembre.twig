<form method="post" class="well">
        <fieldsetclass="form-group">
         <legend>Nouvel itinéraire</legend>
         <div class="form-group row">
           <label for="lieudepart" class="col-sm-2 col-form-label col-form-label-sm">Départ</label>
           <div class="col-sm-10">
             <input  type="text" id="lieudepart" class="form-control form-control-sm" name="lieudepart" required value="{{iti.lieudepart}}" />
           </div>
         </div>
         <div class="form-group row">
           <label for="lieuarrivee" class="col-sm-2 col-form-label col-form-label-sm">Arrivée</label>
           <div class="col-sm-10">
             <input type="text" id="lieuarrivee" class="form-control form-control-sm" name="lieuarrivee" required value="{{iti.lieuarrivee}}"/>
           </div>
         </div>
         <div class="form-group row">
           <label for="datedepart" class="col-sm-2 col-form-label col-form-label-sm">Date</label>
           <div class="col-sm-10">
             <input  type="text" id="datedepart" class="form-control form-control-sm" name="datedepart" required value="{{iti.datedepart}}"/>
           </div>
         </div>
         <div class="form-group row">
           <label for="heuredepart" class="col-sm-2 col-form-label col-form-label-sm">Heure</label>
           <div class="col-sm-10">
             <input type="text" id="heuredepart" class="form-control form-control-sm" name="heuredepart" required value="{{iti.heuredepart}}"/>
           </div>
         </div>
         <div class="form-group row">
           <label for="tarif" class="col-sm-2 col-form-label col-form-label-sm">Tarif</label>
           <div class="col-sm-10">
             <input type="number" min="0" id="tarif" class="form-control form-control-sm" name="tarif" required value="{{iti.tarif}}"/>
           </div>
         </div>
         <div class="form-group row">
           <label for="nbplaces" class="col-sm-2 col-form-label col-form-label-sm">Nb de places</label>
           <div class="col-sm-10">
             <input type="number" min="0" id="nbplaces" class="form-control form-control-sm" name="nbplaces" required value="{{iti.nbplaces}}"/>
           </div>
         </div>
         <div class="form-group row">
           <label for="bagagesautorises" class="col-sm-2 col-form-label col-form-label-sm">Bagages autorisés</label>
            <div class="col-sm-10">
              {% if iti.bagagesautorises == 1 %}
              <label class="radio-inline"><input type="radio" name="bagagesautorises" id="BAoui" checked> Oui </label>
              <label class="radio-inline"><input type="radio" name="bagagesautorises" id="BAnon"> Non </label>
              {% else %}
              <label class="radio-inline"><input type="radio" name="bagagesautorises" id="BAoui"> Oui </label>
              <label class="radio-inline"><input type="radio" name="bagagesautorises" id="BAnon" checked> Non </label>
              {% endif %}
           </div>
         </div>
         <div class="form-group row">
           <label for="details" class="col-sm-2 col-form-label col-form-label-sm">Détails</label>
           <div class="col-sm-10">
             <textarea id="details" class="form-control form-control-sm" name="details" />{{iti.details}}</textarea>
           </div>
         </div>
         <input  type="hidden" id="idmembre" name="idmembre" value="{{iti.idmembre}}"/> 
         <input  type="hidden" id="iditi" name="iditi" value="{{iti.iditi}}"/> 
            <input id="validerModif" type="submit" class="btn btn-primary" name="valider_ajout" value="valider"/>
            <input id="cancelModif" type="cancel" class="btn btn-outline-primary" name="annuler_ajout" value="annuler"/>
        </fieldset>
        </form>