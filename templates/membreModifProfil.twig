<form method="post" class="well">
    <fieldsetclass="form-group">
     <legend>Votre profil</legend>
     <div class="form-group row">
       <label for="nom" class="col-sm-2 col-form-label col-form-label-sm">Nom</label>
       <div class="col-sm-10">
         <input  type="text" id="nom" class="form-control form-control-sm" name="nom" required value="{{membre.nom}}" />
       </div>
     </div>
     <div class="form-group row">
       <label for="prenom" class="col-sm-2 col-form-label col-form-label-sm">Prénom</label>
       <div class="col-sm-10">
         <input type="text" id="prenom" class="form-control form-control-sm" name="prenom" required value="{{membre.prenom}}"/>
       </div>
     </div>
     <div class="form-group row">
       <label for="email" class="col-sm-2 col-form-label col-form-label-sm">Email</label>
       <div class="col-sm-10">
         <input  type="text" id="email" class="form-control form-control-sm" name="email" required value="{{membre.email}}"/>
       </div>
     </div>
     <div class="form-group row">
       <label for="password" class="col-sm-2 col-form-label col-form-label-sm">Mot de passe</label>
       <div class="col-sm-10">
         <input type="text" id="password" class="form-control form-control-sm" name="password" required value="{{membre.password}}"/>
       </div>
     </div>
     <div class="form-group row">
       <label for="anneenaissance" class="col-sm-2 col-form-label col-form-label-sm">Année naissance</label>
       <div class="col-sm-10">
         <input type="number" min="1900" id="anneenaissance" class="form-control form-control-sm" name="anneenaissance" required value="{{membre.anneenaissance}}"/>
       </div>
     </div>
     <div class="form-group row">
      <label for="telportable" class="col-sm-2 col-form-label col-form-label-sm">Téléphone portable</label>
      <div class="col-sm-10">
        <input type="number" id="telportable" class="form-control form-control-sm" name="telportable" required value="{{membre.telportable}}"/>
      </div>
    </div>
     <div class="form-group row">
        <label for="voiture" class="col-sm-2 col-form-label col-form-label-sm">Voiture</label>
        <div class="col-sm-10">
          <input type="text" id="voiture" class="form-control form-control-sm" name="voiture" required value="{{membre.voiture}}"/>
        </div>
      </div>
      <div class="form-group row">
        <label for="sexe" class="col-sm-2 col-form-label col-form-label-sm">Sexe</label>
        <div class="col-sm-10">
          <select class="form-control" name="sexe" id="sexe">
            <option value="M">Masculin</option>
            <option value="F">Feminin</option>
          </select>
        </div>
      </div>

     <input  type="hidden" id="idmembre" name="idmembre" value="{{membre.idmembre}}"/> 
        <input id="validerModifProfil" type="submit" class="btn btn-primary" name="valider_profil" value="valider"/>
        <input id="cancelModif" type="cancel" class="btn btn-outline-primary" name="annuler_profil" value="annuler"/>
    </fieldset>
    </form>